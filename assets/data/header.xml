    <div class="search-account">
        <div class="search">
            <input
                type="text"
                placeholder="Bắt đầu tìm kiếm..."
                name="seach-input"
                id="search-input"
                class="search-input" />
            <span class="material-icons-sharp search-icon"> search </span>
        </div>
        <div class="menu-btn">
            <span class="material-icons-outlined menu-icon">
                menu
                </span>
        </div>
        <div class="account">
            <span class="material-icons-outlined account-icon">
                account_circle
            </span>
            <!-- <div class="modal"></div> -->
            <div class="popup-login">
                <div class="heading-login">Đăng nhập tài khoản</div>
                <div class="form-login">
                    <div class="input-box">
                        <input
                            type="text"
                            class="input-value"
                            name="email-phone"
                            id="email-phone"
                            placeholder="Email hoặc số điện thoại" />
                            <div class="message" id="message-email-phone"></div>
                        </div>
                    <div class="input-box">
                        <input
                        type="password"
                        class="input-value"
                        name="password"
                        id="password"
                        placeholder="Mật khẩu" />
                        <div class="message" id="message-password"></div>
                    </div>
                    <div class="remember-forgot">
                        <div class="remember-login">
                            <input type="checkbox" name="remember" id="remember" />
                            <label for="remember">Ghi nhớ đăng nhập</label>
                        </div>
                        <a class="link" href="">Quên mật khẩu</a>
                    </div>
                    <button class="login-btn">
                            Đăng nhập
                    </button>
                    <div class="another-login">
                        <span>Hoặc đăng nhập bằng</span>
                    </div>
                    <div class="login-logo">
                        <div>
                            <img src="assets/image/logo-login/google.png" alt="" />
                        </div>
                        <div>
                            <img src="assets/image/logo-login/facebook.png" alt="" />
                        </div>
                        <div>
                            <img src="assets/image/logo-login/apple.png" alt="" />
                        </div>
                    </div>
                    <div class="no-account">
                        Nếu bạn chưa có tài khoản? <a href="" class="link">Đăng ký</a>
                    </div>
                </div>
                <div class="close-btn">
                    <span class="material-icons-outlined close-icon">
                        close
                        </span>
                </div>
            </div>
        </div>
    </div>
    
